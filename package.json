{
  "name": "visual-table-canvas-for-markdown",
  "displayName": "Visual Table Canvas for Markdown",
  "description": "Edit Markdown tables with an Excel-like UI",
  "version": "0.1.0",
  "publisher": "nf-software",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Fujita-Naoyuki/visual-table-canvas-for-markdown"
  },
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "keywords": [
    "markdown",
    "table",
    "editor",
    "excel",
    "spreadsheet"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "visualTableCanvas.editTable",
        "title": "Edit Table"
      }
    ],
    "configuration": {
      "title": "Visual Table Canvas",
      "properties": {
        "visualTableCanvas.openBeside": {
          "type": "boolean",
          "default": true,
          "description": "Open Table Editor in a split view beside the current editor. If false, opens in the active tab."
        },
        "visualTableCanvas.defaultMaxColumnWidth": {
          "type": "integer",
          "default": 300,
          "minimum": 50,
          "maximum": 1000,
          "description": "Default maximum column width in pixels for auto-fit."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha",
    "test:coverage": "c8 mocha",
    "test:coverage:report": "c8 --reporter=html --reporter=text mocha"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "c8": "^10.1.3",
    "eslint": "^8.54.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}